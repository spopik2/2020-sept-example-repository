@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "radioButtion Sample";
    //global variables
    string language = Request.Form["LanguageGroup"];
    string script = Request.Form["SriptGroup"];
}
@section banner{<h3>Form using Radiobuttion</h3>}
@* Setup my processing code *@
@if (IsPost)
{
    //did user actually select a radio button
    if (language.IsEmpty() || script.IsEmpty())
    {
        <p><span style="color:firebrick"> Make a selectiuon from both progams and coding.</span></p>
    }
    else
    {
        if (language.Equals("C#", StringComparison.OrdinalIgnoreCase))
        {
            <p>You will greatly enjoy the CPSC1517 course as we use C#.</p>
        }
        else
        {
            <p>Too Bad. Unfortunately the CPSC 1517 course does not use @language</p>
        }

        if (script.ToUpper().Equals("RAZOR"))
        {
            <p>You will greatly enjoy the CPSC1517 course as we use Razor.</p>
        }
        else
        {
            <p>Too Bad. Unfortunately the CPSC 1517 course does not use @script.</p>
        }
    }
}
else
{
    // the else is a great place to do intialization to your form
    // for the 1st pass
    language = "";
    script = "";
}
<form if="theForm" method="post">
    <div class="row">
        <div class="offset-1">
            <label for="LanguageGroup">Select your Favorite programming language</label><br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="C#" 
                   checked="@(language.Equals("C#")?true:false)"/>C#<br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="Cobol"
                   checked="@(language.Equals("Cobol")?true:false)/>Cobol<br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="VB"
                   checked="@(language.Equals("VB")?true:false)/>Visual Basic<br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="Fortran"
                   checked="@(language.Equals("Fortran")?true:false)/>Fortran<br />
            <br />
            <label for="ScriptGroup">Select your Favorite scripting code</label><br />
            <input type="radio" name="ScriptingGroup" id="ScriptingGroup" value="JS"
                   checked="@(script.Equals("JS")?true:false)/>Javascript<br />
            <input type="radio" name="ScriptingGroup" id="ScriptingGroup" value="Razor"
                   checked="@(script.Equals("Razor")?true:false)/>Razor<br />
            <input type="radio" name="ScriptingGroup" id="ScriptingGroup" value="PHP"
                   checked="@(script.Equals("PHP")?true:false)/>PHP<br />
        </div>
    </div>
    <div class="row">
        <div class="offset-2">
            <button type="submit" name="theButton" id="theButton" value="submit">Submit</button>
        </div>
    </div>

</form>


